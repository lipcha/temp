<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Planets"
            android:id="@+id/btnLoadPlanets_AL16"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbLoading_AL16"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivSolarSystem_AL16"
            android:layout_below="@+id/btnLoadPlanets_AL16" android:layout_marginTop="3dp" android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSolarSystemData_AL16" android:textSize="12sp" android:padding="8dp"
            android:layout_below="@+id/ivSolarSystem_AL16" android:layout_marginBottom="3dp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvPlanets_AL16" android:layout_below="@+id/tvSolarSystemData_AL16"/>
</RelativeLayout>